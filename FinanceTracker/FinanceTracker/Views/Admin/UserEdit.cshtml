@model FinanceTracker.ViewModels.operationView.AdminUserViewModel
@{
    Layout = "_FinanceAdminLayous";
}

<!-- Link to Bootstrap CSS -->
<link href="~/cdnlink/csscdn/bootstrap.min.css" rel="stylesheet" />

<div class="container py-auto">
    <div class="row justify-content-center my-auto">
        <div class="col-sm-8 col-md-6 col-lg-4 px-5 py-4 rounded shadow-sm bg-white">
            <!-- Logo -->
            <div class="row justify-content-center mb-2">
                <img src="~/image/financelayout/financelogo.png" alt="Finance Logo" class="w-50 mb-3" />
            </div>
            <!-- Title -->
            <div class="text-center mb-2">
                <h2>Edit User</h2>
            </div>
            <!-- Form -->
            <form asp-controller="Admin" asp-action="UserEdit" method="post">
                <input asp-for="UserId" type="hidden" />

                <div class="form-group mb-3">
                    <label asp-for="UserName" class="form-label">Name</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Role" class="form-label">Role</label>
                    <input asp-for="Role" class="form-control" readonly />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-50">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Script for Bootstrap JavaScript -->
<script src="~/cdnlink/jslibrary/bootstrap.bundle.min.js"></script>
