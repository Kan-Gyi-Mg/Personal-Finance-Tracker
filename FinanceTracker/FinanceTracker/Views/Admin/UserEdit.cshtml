@model FinanceTracker.ViewModels.operationView.AdminUserViewModel
@{
    Layout = "_FinanceAdminLayous";
}
<link href="~/cdnlink/csscdn/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <div class="row align-items-center justify-content-center">
        <div class="col-sm-6 col-md-5 col-lg-4 bg-light px-5 py-4 rounded">
            <div class="row justify-content-center mb-2">
                <img src="~/image/financelayout/financelogo.png" alt="finance logo" class="w-25" />
            </div>
            <div class="text-center mb-4">
                <h2>Edit User</h2>
            </div>
            <form asp-controller="Admin" asp-action="UserEdit" method="post">
                <input asp-for="UserId" hidden />
                <div class="form-group mb-4">
                    <label asp-for="UserName" class="mb-2">Name</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Email" class="mb-2"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Role" class="mb-2"></label>
                    <input asp-for="Role" class="form-control" readonly />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-50">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>
    
<script src="~/cdnlink/jslibrary/bootstrap.bundle.min.js"></script>
