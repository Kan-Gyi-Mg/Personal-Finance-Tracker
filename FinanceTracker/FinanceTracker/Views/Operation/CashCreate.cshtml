@model FinanceTracker.Models.Operations.UserCashModel
@{
    Layout = "_FinanceTrackerLayout";
}
<link href="~/cdnlink/csscdn/bootstrap.min.css" rel="stylesheet" />

<section class="container-fluid" style="background-color: #7F9AC0">
    <div class="row vh-100 align-items-center justify-content-center">
        <div class="col-sm-12 col-md-6 col-lg-6 bg-light px-5 py-4 rounded">
            <div class="text-center mb-4">
                <h2>New CashFlow</h2>
            </div>
            <form asp-controller="Operation" asp-action="CashCreate" method="post">
                <div class="form-group mb-4">
                    <label asp-for="Category" class="mb-2"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div> 
                <div class="form-group mb-4">
                    <label asp-for="Amount" class="mb-2"></label>
                    <input type="number" asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-50">Add</button>
                </div>
            </form>
        </div>
    </div>
</section>
<script src="~/cdnlink/jslibrary/bootstrap.bundle.min.js"></script>
